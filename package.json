{
  "name": "prettier-plugin-mp",
  "version": "1.1.0",
  "description": "Prettier plugin for WeChat Mini Program WXML files",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/CornWorld/prettier-plugin-mp.git"
  },
  "exports": {
    ".": {
      "import": "./src/index.js",
      "require": "./src/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:wxml": "prettier --plugin=./index.js --write \"**/*.wxml\""
  },
  "keywords": [
    "prettier",
    "plugin",
    "wechat",
    "miniprogram",
    "wxml",
    "wxs",
    "formatter",
    "prettier-plugin",
    "wechat-miniprogram",
    "wxml-formatter",
    "prettier-plugin-wxml"
  ],
  "author": "CornWorld <github.contact@corn.im>",
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "peerDependencies": {
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "@xml-tools/parser": "^1.0.11"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "vitest": "^3.2.4"
  }
}
